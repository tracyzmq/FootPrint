<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    android:background="@color/text_light_gray">

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_small"
        android:paddingLeft="6dp"
        android:paddingRight="3dp"
        android:layout_marginTop="@dimen/item_horizontal_margin"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/dark_green"
        android:layout_marginLeft="45dp"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/icon_dot"/>

    <RelativeLayout
        android:layout_toRightOf="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_horizontal_margin"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/avartar"
            android:layout_width="@dimen/item_avartar"
            android:layout_height="@dimen/item_avartar"
            android:src="@mipmap/timeline_foot"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/avartar"
            android:layout_alignTop="@+id/avartar"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/text_middle"/>

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/avartar"
            android:layout_alignBottom="@+id/avartar"
            android:layout_below="@+id/title"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_small"/>

        <TextView
            android:id="@+id/tvLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_xxsmall"
            android:textColor="@color/text_light_gray"
            android:layout_marginTop="10dp"
            android:src="@mipmap/timeline_foot"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@+id/ivLike"
            android:layout_toLeftOf="@+id/tvLike"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/icon_fav"
            android:layout_alignParentBottom="true"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>
